@model NavigationPagesViewModel

<nav aria-label="Page navigation example">
    <ul class="pagination">
        <li class="page-item">
            <a class="page-link" href="#">Previous</a>
        </li>

        @for (int i = Model.StartIndexPage; i < Model.StartIndexPage + Model.TotalNavigationPages; i++)
        {            
            <li class="page-item">
                <a asp-action="ShowResults"                  
                   asp-route-startIndex="@((i-1)*Model.TotalItemsPerPage + 1)"
                   asp-route-queryText="@Model.SearchQuery"
                   class="page-link">@i</a>
            </li>
        }

        <li class="page-item">
            <a class="page-link" href="#">Next</a>
        </li>

        @*<li class="page-item">
            <a asp-action="ShowResults"
               asp-route-pageOfPagination="@(Model.StartIndex + 1 )"
               class="page-link">@(Model.StartIndex + 1)</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">@(Model.StartIndex + 2)</a>
        </li>*@

    </ul>    
</nav>